@model Emergy.Api.Models.PerformanceModel
@{
    ViewBag.Title = "Home";
}

<div style="height: 50px"></div>
<div class="row" style="margin:4em;">
    <div class="col-lg-12">
        <img class="img-responsive center-block" src="~/Content/api-icon.png"/>
    </div>
</div>

<div class="row center">
    <div class="col-sm-6">
        <div class="card center-block center" style="margin:0px auto;">
            <div class="content">
                <span class="title">CPU</span>
                <p>@Model.CpuUsage</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card center-block center" style="margin:0px auto;">
            <div class="content">
                <span class="title">RAM</span>
                <p>@Model.RamUsage</p>
            </div>
        </div>
    </div>
</div>

