@model Emergy.Api.Models.PerformanceModel
@{
    ViewBag.Title = "Home";
}

<div style="height: 50px"></div>
<div class="row" style="margin:4em;">
    <div class="col-lg-12">
        <img class="img-responsive center-block" style="margin:0px auto;" src="~/Content/api-icon.png" />
    </div>
</div>

<div class="row center">
    <div class="col-sm-6">
        <div class="card center-block center" style="margin:0px auto;">
            <div class="content">
                <span class="title">CPU</span>
                <p>
                    <b>@Model.CpuUsage</b>
                </p>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card center-block center" style="margin:0px auto;">
            <div class="content">
                <span class="title">RAM</span>
                <p>
                    <b>@Model.RamUsage</b>
                </p>
            </div>
        </div>
    </div>
</div>

